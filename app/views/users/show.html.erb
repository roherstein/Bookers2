<div class="container">
  <div class="row">

    <div class="col-md-3">
      <h4>User info</h4>
      <%= f.file_field :image, accept: "image/*" %>
      <%= image_tag Book.image, size: "200x200" %>
      <p>Name</p>
      <p>Introduction</p>
    </div>

    <div class="col-md-8 offset-md-1">
      <h1>Users</h1>
      <% @users.each do |user| %>
        <p>Image</p>
        <span><% user.name %></span>
        <p>Name</p>
        <span><%= user.introduction %></span>
      <% end %>
    </div>

    <div class="col-md-3">
      <h1>New book</h1>

      <%= form_with model: @book |f| %>
       <h4>Title</h4>
       <% f.text_field :title %>
       <h4>Opinion</h4>
       <%= f.text_area :body %>
       <%= f.submit 'Create Book' %>
      <% end %>
    </div>
  </div>
</div>