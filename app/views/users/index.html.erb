<div class="container">
  <div class="row">

    <div class="col-md-3">
      <%= render 'user info', user: @user %>

      <div class="row">
        <%= link_to edit_user_path(current_user.id),class:"btn btn-outline-secondary btn-block" do %>
          <i class="fas fa-user-cog"></i>
        <% end %>
　    </div>

　    <h1>New book</h1>
      <%= form_with model: @book do |f| %>
       <h4>Title</h4>
       <%= f.text_field :title %>
       <h4>Opinion</h4>
       <%= f.text_area :body %>
       <%= f.submit 'Create Book' %>
      <% end %>
    </div>

      <div class="col-md-8 offset-md-1">
        <h1>Users</h1>

        <% @users.each do |user| %>
          <% if user.image.attached? %>
           <%= image_tag User.image, size: "200x200" %>
          <% else %>
           <%= image_tag 'no_image.jpeg',size: "200x200" %>
          <% end %>

          <span><%= user.name %></span>
          <%= link_to "Show",user_path(user.id) %>
        <% end %>


      </div>

  </div>
</div>