<div class="container">
  <div class="row">

    <div class="col-md-3">
      <%= render 'user info', user: @user %>

      <div class="row">
        <%= link_to edit_user_path(current_user.id),class:"btn btn-outline-secondary btn-block" do %>
          <i class="fas fa-user-cog"></i>
        <% end %>
　    </div>

　    <h1>New book</h1>
      <%= form_with model: @book do |f| %>
       <h4>Title</h4>
       <%= f.text_field :title %>
       <h4>Opinion</h4>
       <%= f.text_area :body %>
       <%= f.submit 'Create Book',class: "btn btn-success" %>
      <% end %>
    </div>

    <div class="col-md-8 offset-md-1">
      <h1>Users</h1>
        <table class = "table">
          <thead>
            <tr>
              <th>image</th>
              <th>name</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
            <% @users.each do |user| %>
             <tr>
              <td>
                <%= image_tag user.get_profile_image(100,100) %>
              </td>
              <td>
                <span><%= user.name %></span>
              </td>
              <td>
                <%= link_to "Show",user_path(user.id) %>
              </td>
             </tr>
            <% end %>
          </tbody>
        </table>
    </div>
  </div>
</div>