<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>

      <% if user_signed_in? %>
       <a href="root">Bookers</a>
       <li>
        <%= link_to "Bookers",homes_top_path,method: :get %>
       </li>
       <li>
        <%= link_to "Home",homes_top_path,method: :get %>
       </li>
       <li>
        <%= link_to "Users",users_path,method: :get %>
       </li>
        <li>
        <%= link_to "Books",books_path,method: :get %>
       </li>
       <li>
        <%= link_to "Log out",destroy_user_session_path,method: :delete %>
       </li>
      <% else %>
       <li>
        <%= link_to "Bookers",homes_top_path,method: :get %>
       </li>
       <li>
        <%= link_to "Home",user_path,method: :get %>
       </li>
       <li>
        <%= link_to "About",homes_about_path,method: :get %>
       </li>
        <li>
        <%= link_to "Sign up",new_user_password_path,method: :get %>
       </li>
       <li>
        <%= link_to "Log in",new_user_session_path,method: :get %>
       </li>
      <% end %>

    </header>
    <%= yield %>

    <footer>
     <p>CopyRight Infratop.inc</p>
    </footer>

  </body>
</html>
