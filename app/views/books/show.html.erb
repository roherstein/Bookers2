<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render 'users/user info', user: @user %>
      <div class="row">
        <%= link_to edit_user_path(current_user.id),class:"btn btn-outline-secondary btn-block" do %>
          <i class="fas fa-user-cog"></i>
        <% end %>
　    </div>

      <h1>New book</h1>
      <%= form_with model: @book do |f| %>
       <h4>Title</h4>
       <%= f.text_field :title %>
       <h4>Opinion</h4>
       <%= f.text_area :body %>
       <%= f.submit 'Create Book',class: "btn btn-success" %>
      <% end %>
    </div>

    <div class="col-md-8 offset-md-1">
      <h1>Book detail</h1>
        <table class="table">
          <tbody>
            <tr>
              <td>
                <%= image_tag @user.get_profile_image(100,100) %>
                <br>
                <%= link_to @user.name, user_path(@user.id) %>
              </td>
              <td>
                <%= link_to @book_to_show.title, book_path(@book_to_show) %>
              </td>
              <td>
                <span><%= @book_to_show.body %></span>
              </td>
              <td>
                <% if @user == current_user %>
                  <%=link_to "Edit", edit_book_path(@book_to_show.id),class: "btn btn-success" %>
                <% end %>
              </td>
              <td>
                <% if @user == current_user %>
                  <%=link_to "Destroy", book_path(@book_to_show.id),class: "btn btn-danger", method: :delete, "data-confirm" => "本当に削除しますか？" %>
                <% end %>
              </td>
            </tr>
          </tbody>
        </table>
    </div>
  </div>
</div>