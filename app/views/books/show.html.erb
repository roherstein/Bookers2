<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render 'users/user info', user: @user %>
      <div class="row">
        <%= link_to edit_user_path(current_user.id),class:"btn btn-outline-secondary btn-block" do %>
          <i class="fas fa-user-cog"></i>
        <% end %>
　    </div>

      <h1>New book</h1>
      <%= form_with model: @book do |f| %>
       <h4>Title</h4>
       <%= f.text_field :title %>
       <h4>Opinion</h4>
       <%= f.text_area :body %>
       <%= f.submit 'Create Book' %>
      <% end %>
    </div>

    <div class="col-md-8 offset-md-1">
      <h1>Book detail</h1>
      <% @books.each do |book| %>
      　繰り返し文ではなく、かつ、特定のuser_idの詳細を表示
        <% if @user.image.attached? %>
         <%= image_tag User.image, size: "200x200" %>
        <% else %>
         <%= image_tag 'no_image.jpeg',size: "200x200" %>
        <% end %>
        <p>Title</p>
        <span><%= book.title %></span>
　　　　<%= link_to "Title", book_path(book.id) %>
        <p>Opinion</p>
        <span><%= book.body %></span>
        <span>
         <!--%=link_to "Edit", edit_book_path(book.id) %>-->
         <!--%=link_to "Destroy", books_path , method: :delete, "data-confirm" => "本当に削除しますか？" %>-->
        </span>
      <% end %>
    </div>
  </div>
</div>